{% assign handles = content.metafields.shogun.products | split: "," | slice: 0, 20 %}
{% if handles.size > 0 %}
  <script type="text/javascript">
    window.__shgProducts = window.__shgProducts || {};
    {% for handle in handles %}
      {%- comment %}<locksmith:c12f>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: handle, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:c12f>{% endcomment -%}
      {% assign currentProduct = all_products[handle] %}
      {% if currentProduct != blank %}
        window.__shgProducts["{{handle}}"] = {{currentProduct | json }};
      {% endif %}
    {% endfor %}
  </script>
{% endif %}
{% if cart != blank and cart.currency != blank and cart.currency.iso_code != blank %}
  <script type="text/javascript">
    window.__shgCurrentCurrencyCode = window.__shgCurrentCurrencyCode || "{{ cart.currency.iso_code }}";
  </script>
{% endif %}
