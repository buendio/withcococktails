  {% assign image_url = section.settings.image | img_url: '1200x' %}
  <section class="Section Section--spacingNormal Slideshow__ImageContainer section_bg"  id="section-{{ section.id }}" data-section-id="{{ section.id }}" style="background-image: url({{ image_url}});">  
    
  </section>
<style>
#shopify-section-cocktail-club-banner .Slideshow__ImageContainer {
background-position:bottom;
width:100%;height: 45vw;background-size: cover;position:relative;background-repeat: no-repeat;}
.section_bg{margin-top:0px !important;margin-bottom:0px !important;} 
@media (max-width:767px)
  {
   #shopify-section-cocktail-club-banner .Slideshow__ImageContainer { height: 300px;}
  }
    
</style>
{%- endif -%}
